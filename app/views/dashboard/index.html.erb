<section id="main-content">
  <div id="guts">

    <nav style="margin-bottom:50px;">
      <ul class="group">
        <li><%= link_to 'New Quote', 'quotes/new' %></li>
        <li><%= link_to 'Show Quotes', 'quotes' %></li>
      </ul>
    </nav>


    <div id="col1">
      <h2>Previous Day</h2>

      <div id="to-be-shipped">
        <h3>To Be Shipped</h3>
       <% @quote.each do |today| %>
          #<%= today.id %> <%= today.company_name %> - <%= today.created_at %> | <%= link_to today.id, today %>
          <br>
      <% end %>
      </div>

    </div>

    <div id="col2" style="text-align:center;">
      <h2><b>Today</b></h2>
      <% @quote.each do |today| %>
          #<%= today.id %> <%= today.company_name %> - <%= today.created_at %> | <%= link_to today.id, today %>
          <br>
      <% end %>
    </div>

    <div id="col3">
      <h2>Next Day</h2>

      <div id="pending-quotes">
        <h3>Pending Quotes</h3>
        <% @quote.each do |pending| %>
            #<%= pending.id %> <%= pending.company_name %> - <%= pending.created_at %> | <%= link_to pending.id, pending %>
        <% end %>
      </div>


    </div>
  </div>

  <div style="clear:both;"></div>
  </div>
</section>